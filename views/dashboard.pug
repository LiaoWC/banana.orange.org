doctype html
html
    head
        title Dashboard
        include layout/head
        // === Stylesheets ===
        include layout/stylesheets
        style(type='text/css').
            body {
                background-color: #024873;
                color: white;
            }

            .col,.col-md,.col-sm,.col-xl,.col-lg {
                border-style: solid;
                border-width: thin;
                border-color: #75A3BF;
                padding: 50px 25px;
            }

            .start_work {
                display: flex;
                justify-content: center;
                align-items: center;
                /*color: darkgray;*/
                /*font-size: 50px;*/
            }

            .slide_col {
                padding: 0;
            }

            .icon_col {
                padding: 0;
            }

            #assign_task_system_row {

            }

            #taskAssignmentSys {
                margin-top: 1rem;
                margin-bottom: 1rem;
            }
        // === Include Javascript ===
        include layout/js
        script(type='text/javascript' src='/js/dashboard_clock.js')

    body
        include layout/header
        .container-fluid
            .row
                .col-sm
                    .container.text-center
                        h1 Welcome to BO!
                        | Intelligence Assistant
                .col-sm.start_work.fa-5x
                    .container.text-center
                        h1
                            | You have worked for 
                            <strong id="num1" style="font-size: 180%;">5</strong>
                            |  seconds.


            .row
                .col-lg.icon_col
                    include dashboard/icons

                        //img.mx-2(src="https://mdbootstrap.com/img/Photos/Others/placeholder5.jpg" alt="Generic placeholder image")
            .row
                .col-xl.slide_col
                    include dashboard/bulletin

                .col-md
                    //.container.text-center
                    //    h3 Special title treatment
                    //    p.card-text With supporting text below as a natural lead-in to additional content.
                    //    a.btn.btn-primary(href='#!') More
                    //    | 2 days ago
                    .container.mt-5
                        // Section: Content
                        section
                            // Grid row
                            .row
                                // Grid column
                                .col-lg-2.col-md-12.mb-lg-0.mb-4

                                // Grid column
                                // Grid column
                                .col-lg-9.col-md-6.mb-md-0.mb-4.mt-xl-4
                                    h3.font-weight-normal.mb-4 What do think about WFH?
                                    p.text-muted
                                    a.btn.btn-outline-primary.mx-0(href='/bulletin')
                                        | READ POSTS
                                        i.fas.fa-arrow-right.fs-9.ml-2


            .row
                .col-xl
                    .container.text-center
                        include dashboard/forum
                .col-xl
                    .row
                        .container
                            include dashboard/todo
            .row
                .col-md
                    .container
                        include dashboard/task
                .col-md
                    .container
                        include dashboard/task_wait_approved
            .row
                .col-md
                    .container.text-center
                        include dashboard/chat
                .col-md
                    .container.text-center
                        include dashboard/meeting
                .col-md
                    .container.text-center
                        include dashboard/online_people
            .row
                h3#taskAssignmentSys.container.text-center Task Assignment System
            .row#assign_task_system_row
                .col-xl
                    .container.text-center
                        include dashboard/task_assignment/assign
                .col-xl
                    .container.text-center
                        include dashboard/task_assignment/have_assigned_but_not_completed
                .col-xl
                    .container.text-center
                        include dashboard/task_assignment/completed_but_not_checked

            .row
                .col-md
                    // Grid row
                    .row
                        // Grid column
                        .col-md-12.mb-4.text-center
                            button.btn.btn-fb(type='button')
                                i.fab.fa-facebook-f.left
                                |  Facebook
                            button.btn.btn-gplus(type='button')
                                i.fab.fa-google-plus-g.left
                                |  Google +
                            button.btn.btn-ins(type='button')
                                i.fab.fa-instagram.left
                                |  Instagram
                            button.btn.btn-so(type='button')
                                i.fab.fa-stack-overflow.left
                                |  Stack Overflow
                        .col-md-12.mb-4.text-center
                            // Facebook
                            button.btn.btn-fb.btn-lg(type='button')
                                i.fab.fa-facebook-f
                            span.counter 22
                            // Twitter
                            button.btn.btn-tw.btn-lg(type='button')
                                i.fab.fa-twitter
                            span.counter 22
                            // Google +
                            button.btn.btn-gplus.btn-lg(type='button')
                                i.fab.fa-google-plus-g
                            span.counter 22
                            // Linkedin
                            button.btn.btn-li.btn-lg(type='button')
                                i.fab.fa-linkedin-in
                            span.counter 22
                            // Slack
                            button.btn.btn-slack.btn-lg(type='button' onclick='clickRedirect("/team")')
                                i.fas.fa-users.left
                                | Team
                                // Emails
                            button.btn.btn-email.btn-lg(type='button')
                                i.fas.fa-envelope
                            span.counter 22
            .row
                .col-md
                    // Footer
                    footer.page-footer.font-small.blue.primary-color-dark
                        // Copyright
